<div class="projectCard tagPHP tagCSS tagHTML tagJavaScript">
    <div class="projectCardActivityIndicator {{ project.indicatorClass }}">{{ project.indicatorTranslationString|trans([], "projects") }}</div>
    <div class="projectCardImage lazy" data-bg="url({{ project.image }})"></div>{#TODO: Add Low-Res version to always load#}
    <div class="projectCardMeta">
        <span class="projectCardTitle">{{ project.name|decodeLocaleArray }}</span>
        <span class="projectCardTeaser">{{ project.headline|decodeLocaleArray }}</span>
    </div>
    <div class="projectCardCTAContainer">
        {% if not project.redirectToExternal %}<div class="projectCardCTA"><a href="{{ path('projects_view', {"urlName": project.urlName}) }}" class="spf-link">{% trans from "projects" %}view{% endtrans %}</a></div>{% endif %}
        {% if project.externalURL %}<div class="projectCardCTA"><a href="{{ project.externalURL }}" target="_blank"><i class="fas fa-external-link-alt"></i> {% trans from "projects" %}viewexternal{% endtrans %}</a></div>{% endif %}
    </div>
</div>

