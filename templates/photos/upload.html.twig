{% extends 'base.html.twig' %}

{% block body %}
    {#{{ form_start(form) }}
    {{ form_end(form) }}#}
    <form action="{{ path('photoDoUploadToAlbum', {
        "albumID": albumID,
        "galleryID": galleryID
    }) }}" method="POST" enctype="multipart/form-data" id="uploader" class="dropzone">
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.js" integrity="sha256-cs4thShDfjkqFGk5s2Lxj35sgSRr4MRcyccmi0WKqCM=" crossorigin="anonymous"></script>

    <script>
        Dropzone.autoDiscover = false;

        $(function () {
            var dropzone = new Dropzone(document.getElementById("uploader"), {
                paramName: 'photo'
            });
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.5.1/min/dropzone.min.css" integrity="sha256-e47xOkXs1JXFbjjpoRr1/LhVcqSzRmGmPqsrUQeVs+g=" crossorigin="anonymous" />
{% endblock %}

{% block title %}Upload to Album #{{ albumID }}{% endblock %}

