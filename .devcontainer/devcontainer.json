{
	"name": "PHP & MariaDB",
	"dockerComposeFile": "docker-compose.yaml",
	"service": "app",
	"workspaceFolder": "/workspace",
	
	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"terminal.integrated.shell.linux": "/bin/bash",
		"sqltools.connections": [{
			"name": "Container database",
			"driver": "MariaDB",
			"server": "localhost",
			"previewLimit": 50,
			"port": 3306,
			"database": "mariadb",
			"username": "root",
			"password": "mariadb"
		}],
		"php.executablePath":"/usr/local/bin/php",
		"symfony-vscode.phpExecutablePath":"/usr/local/bin/php"
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"felixfbecker.php-debug",
		"felixfbecker.php-intellisense",
		"mrmlnc.vscode-apache",
		"TheNouillet.symfony-vscode",
		"whatwedo.twig",
		"formulahendry.terminal",
		"mtxr.sqltools",
		"mtxr.sqltools-driver-mysql"
	],
	"forwardPorts": [8000, 3306],
	"postStartCommand": "cd ~/workspace/KevinK.dev && composer install && symfony console make:migration && symfony console doctrine:migrations:migrate && symfony server:start -d"

	// Uncomment to connect as a non-root user. See https://aka.ms/vscode-remote/containers/non-root.
	// "remoteUser": "vscode"
}
